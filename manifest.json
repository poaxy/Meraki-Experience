{
  "manifest_version": 3,
  "name": "Meraki Experience",
  "version": "1.0.0",
  "description": "Dynamically enhances the experience for *.meraki.com/* pages based on device model or page title.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.meraki.com/*",
    "https://documentation.meraki.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.meraki.com/*", "https://documentation.meraki.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    }
  },
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
